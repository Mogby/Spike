{
  "logging": {
    "version": 1,
    "formatters": {
      "standard": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "console": { 
        "class": "logging.StreamHandler",
        "formatter": "standard",
        "level": "INFO",
        "stream": "ext://sys.stdout"
      },
      "rotating_file_handler": {
          "class": "logging.handlers.RotatingFileHandler",
          "filename": "/tmp/spike/log",
          "mode": "a",
          "maxBytes": 1048576
      }
    }
  },
  "spike": {
    "yadisk": {
      "token": "",
      "root_dir": "/Spike/",
      "public_url": ""
    },
    "telegram_token": "",
    "workdir": "/tmp/spike",
    "database": "state.pkl"
  }
}
